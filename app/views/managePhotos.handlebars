{{#if status}}
    <div class="showToast" style="display: none">{{status}}</div>
{{/if}}
<div class="addCatalog">
    <form method="POST" action="/admin/addCatalog">
        <p class="addCatalog__wrapper">
            <label>Nazwa katalogu</label>
            <input type="text" name="catalog" placeholder="budowaStadionu">
        </p>
        <button type="submit">Dodaj katalog</button>
    </form>
</div>
<div class="uploadPhotos">
    <form method="POST" action="/admin/uploadPhotos" enctype='multipart/form-data'>
        <p class="uploadPhotos__wrapper">
            <label>Wybierz katalog</label>
            <select name="catalog">
                {{#each catalogs}}
                    <option value="{{this.path}}">{{this.path}}</option>
                {{/each}}
            </select>
        </p>
        <p class="uploadPhotos_wrapper">
            <label>Wybierz zdjęcia</label>
            <input type="file" multiple name="photos">
        </p>
        <button type="submit">Dodaj zdjęcia</button>
    </form>
</div>
{{#each catalogs}}
    <div class="catalog">
        <h2>{{this.path}}</h2>
        <form method="POST" action="/admin/deleteCatalog" class="deleteCatalogForm">
            <input type="hidden" name="catalog" value="{{this.path}}">
            <button type="submit">Usuń katalog</button>
        </form>
        {{#each this.photos}}
            <div class="catalog__photo-wrapper">
                <form method="POST" action="/admin/deletePhoto" class="deletePhotoForm">
                    <input type="hidden" name="photo" value="{{../this.path}}/{{this.path}}">
                    <button type="submit">Usuń zdjęcie</button>
                </form>
                <img src="/static/uploads/{{../this.path}}/{{this.path}}" class="catalog__photo" style="width: 200px;height: 200px;float: left;">
            </div>
        {{/each}}
    </div>
{{/each}}
