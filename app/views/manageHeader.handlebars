<div class="js-page__manageHeader">
    <script>
        window.__PRESTATE__ = {};
        window.__PRESTATE__.header = {{{json header}}};
        window.__PRESTATE__.footer = {{{json footer}}};
    </script>
    <button class="manageHeader__saveButton">Zapisz nagłówek i stopkę</button>
    <div class="manageHeader">
        <p class="manageHeader__wrapper">
            <label>Nazwa firmy PL</label>
            <input type="text" value="{{header.title.pl}}" class="manageHeader__title-pl">
        </p>
        <p class="manageHeader__wrapper">
            <label>Nazwa firmy EN</label>
            <input type="text" value="{{header.title.en}}" class="manageHeader__title-en">
        </p>
        <h2>Nawigacja PL</h2>
        <div class="manageHeader__linksPlContainer">{{#each header.links.pl}}<div class="manageHeader__linkGroup block" data-block-id="{{this.blockId}}">
                    <button class="headerLinkPl__up"><i class="fa fa-arrow-up" aria-hidden="true"></i></button>
                    <button class="headerLinkPl__down"><i class="fa fa-arrow-down" aria-hidden="true"></i></button>
                    <button class="headerLinkPl__delete"><i class="fa fa-trash" aria-hidden="true"></i></button>
                    <p>
                        <label>Nazwa</label>
                        <input type="text" class="manageHeader__linkPL-title" value="{{this.title}}">
                    </p>
                    <p>
                        <label>Adres</label>
                        <input type="text" class="manageHeader__linkPL-url" value="{{this.url}}">
                    </p>
                </div>{{/each}}</div>
        <button type="button" class="manageHeader__add-link-pl">Dodaj link</button>
        <h2>Nawigacja EN</h2>
        <div class="manageHeader__linksENContainer">{{#each header.links.en}}<div class="manageHeader__linkGroup block" data-block-id="{{this.blockId}}">
                    <button class="headerLinkEn__up"><i class="fa fa-arrow-up" aria-hidden="true"></i></button>
                    <button class="headerLinkEn__down"><i class="fa fa-arrow-down" aria-hidden="true"></i></button>
                    <button class="headerLinkEn__delete"><i class="fa fa-trash" aria-hidden="true"></i></button>
                    <p>
                        <label>Nazwa</label>
                        <input type="text" class="manageHeader__linkEN-title" value="{{this.title}}">
                    </p>
                    <p>
                        <label>Adres</label>
                        <input type="text" class="manageHeader__linkEN-url" value="{{this.url}}">
                    </p>
                </div>{{/each}}</div>
        <button type="button" class="manageHeader__add-link-en">Dodaj link</button>
    </div>

    <div class="manageFooter">
        <p class="manageFooter__wrapper">
            <label>Nazwa firmy PL</label>
            <input type="text" value="{{footer.title.pl}}" class="manageFooter__title-pl">
        </p>
        <p class="manageFooter__wrapper">
            <label>Nazwa firmy EN</label>
            <input type="text" value="{{footer.title.en}}" class="manageFooter__title-en">
        </p>
        <p class="manageFooter__wrapper">
            <label>Rok</label>
            <input type="text" value="{{footer.year}}" class="manageFooter__year">
